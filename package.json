{
  "name": "angular-icon",
  "version": "1.2.0",
  "description": "Simple SVG icon component for Angular 2+.",
  "main": "angular-icon.bundle.js",
  "module": "angular-icon.module.js",
  "jsnext:main": "angular-icon.module.js",
  "types": "angular-icon.module.d.ts",
  "scripts": {
    "test": "mocha --require ts-node/register test/**/*.spec.ts --recursive",
    "test:watch": "mocha -w --require ts-node/register test/**/*.spec.ts --recursive",
    "build": "rimraf dist && tsc -p tsconfig.esm.json && rollup -c rollup.config.js dist/angular-icon.module.js > dist/angular-icon.bundle.js && cp package.json dist && ts-node tools/cleanup.ts && ngc && cp README.md CHANGELOG.md dist",
    "build:demo": "rimraf demo/dist && tsc -p tsconfig.demo.json",
    "lint": "tslint -c tslint.json src/**/*.ts test/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitaliy-bobrov/angular-icon.git"
  },
  "keywords": [
    "angular",
    "svg",
    "icon",
    "sprite"
  ],
  "author": "Vitaliy Bobrov <bobrov1989@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vitaliy-bobrov/angular-icon/issues"
  },
  "homepage": "https://github.com/vitaliy-bobrov/angular-icon#readme",
  "devDependencies": {
    "@angular/common": "^2.4.9",
    "@angular/compiler": "^2.4.9",
    "@angular/compiler-cli": "^2.4.9",
    "@angular/core": "^2.4.9",
    "@angular/platform-browser": "^2.4.9",
    "@angular/platform-browser-dynamic": "^2.4.9",
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.37",
    "@types/node": "^7.0.0",
    "chai": "^3.5.0",
    "codelyzer": "^2.0.0-beta.4",
    "core-js": "^2.4.1",
    "mocha": "^3.2.0",
    "rimraf": "^2.5.4",
    "rollup": "^0.41.4",
    "rxjs": "^5.0.3",
    "systemjs": "0.19.28",
    "ts-helpers": "^1.1.2",
    "ts-node": "^2.0.0",
    "tslib": "^1.5.0",
    "tslint": "^4.3.1",
    "typescript": "^2.1.4",
    "zone.js": "^0.7.4"
  },
  "peerDependencies": {
    "@angular/core": ">=2.0.0"
  }
}
